<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="rootNode" stylesheets="@../../../css/reports.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.billing.controller.ProfitLossReportController">
	<top>
		<VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
			<children>
				<Label fx:id="heading" text="आर्थिक वर्षाचा अहवाल" />
				<AnchorPane>
					<children>
						<GridPane hgap="10.0" vgap="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
							<columnConstraints>
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="50.0" />
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" />
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="50.0" />
								<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label styleClass="nodeLabel" text="या तारखेपासून :" GridPane.halignment="RIGHT" />
								<DatePicker fx:id="dpFromDate" GridPane.columnIndex="1" />
								<DatePicker fx:id="dpToDate" GridPane.columnIndex="3" />
								<Label styleClass="nodeLabel" text="या तारखेपर्यंत :" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
							</children>
						</GridPane>						
					</children>
				</AnchorPane>
			</children>
			<padding>
				<Insets bottom="20.0" />
			</padding>
		</VBox>
	</top>
	<center>
		<BorderPane BorderPane.alignment="CENTER">
			<center>
            <HBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox spacing="10.0">
                     <children>
            				<TableView fx:id="debitDetailsTable" prefHeight="300.0">
            					<columns>
            						<TableColumn fx:id="tcDebitDescription" minWidth="150.0" prefWidth="250.0" text="डेबिट (खर्च)" />
            						<TableColumn fx:id="tcDebitAmount" minWidth="150.0" prefWidth="250.0" text="रक्कम" />
            					</columns>
            					<placeholder>
            						<Label fx:id="placeholderText" />
            					</placeholder>
            					<columnResizePolicy>
            						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            					</columnResizePolicy>
            				</TableView>
                        <GridPane hgap="10.0" styleClass="readOnlyField" vgap="5.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label styleClass="nodeLabel" text="निव्वळ नफा :" GridPane.halignment="RIGHT" />
                              <TextField fx:id="txtDebitTotal" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <styleClass>
                                    <String fx:value="readOnlyField" />
                                    <String fx:value="amountWithCurrency" />
                                 </styleClass>
                              </TextField>
                              <TextField fx:id="txtNetProfit" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1">
                                 <styleClass>
                                    <String fx:value="readOnlyField" />
                                    <String fx:value="profitAmount" />
                                 </styleClass>
                              </TextField>
                              <Label styleClass="nodeLabel" text="एकूण :" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <TableView fx:id="creditDetailsTable" prefHeight="300.0">
                           <columns>
                              <TableColumn fx:id="tcCreditDescription" minWidth="150.0" prefWidth="250.0" text="क्रेडिट (जमा) " />
                              <TableColumn fx:id="tcCreditAmount" minWidth="150.0" prefWidth="250.0" text="रक्कम" />
                           </columns>
                           <placeholder>
                              <Label fx:id="placeholderText1" />
                           </placeholder>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <GridPane hgap="10.0" styleClass="readOnlyField" vgap="5.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label styleClass="nodeLabel" text="निव्वळ तोटा :" GridPane.halignment="RIGHT" />
                              <TextField fx:id="txtCreditTotal" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <styleClass>
                                    <String fx:value="readOnlyField" />
                                    <String fx:value="amountWithCurrency" />
                                 </styleClass>
                              </TextField>
                              <TextField fx:id="txtNetLoss" alignment="CENTER_RIGHT" editable="false" GridPane.columnIndex="1">
                                 <styleClass>
                                    <String fx:value="readOnlyField" />
                                    <String fx:value="lossAmount" />
                                 </styleClass>
                              </TextField>
                              <Label styleClass="nodeLabel" text="एकूण :" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
            </HBox>
			</center>
		</BorderPane>
	</center>
	<bottom>
		<ButtonBar BorderPane.alignment="CENTER">
			<buttons>
				<Button fx:id="btnClose" cancelButton="true" mnemonicParsing="false" onAction="#onCloseAction" text="बंद करा" />
			</buttons>
			<padding>
				<Insets top="10.0" />
			</padding>
		</ButtonBar>
	</bottom>
</BorderPane>
